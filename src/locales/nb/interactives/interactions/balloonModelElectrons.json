{
  "title": "Sticking a Balloon to a Wall",
  "publicationStatus": "public",
  "labEnvironment": "production",
  "subtitle": "How can a charged balloon stick to a neutral wall?",
  "category": "",
  "subCategory": "",
  "screenshot": "",
  "aspectRatio": 1.3,
  "fontScale": 1,
  "lang": "en-US",
