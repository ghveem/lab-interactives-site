{
  "title": "Light Intensity",
  "publicationStatus": "public",
  "labEnvironment": "production",
  "subtitle": "Detecting a Planet by Monitoring Starlight",
  "category": "",
  "subCategory": "",
  "screenshot": "",
  "aspectRatio": 1.7,
  "fontScale": 0.7,
  "lang": "en-US",
  "i18nMetadata": "",
  "helpOnLoad": false,
  "aboutOnLoad": true,
  "about": [
  	"Discover how a planet can dim a star's apparent light intensity (brightness).",
    "",
    "Press the **Play** button to start the model.",
    "Move the planet around the model space. Look at the light intensity graph",
    "to discover how light intensity changes as the planet moves",
    "past the star.",
    "",
    "Try changing the diameter of the planet. Which planets are more likely to be detected?"
  ],
  "credits": ["This [High-Adventure Science](http://has.concord.org \"High-Adventure Science\") interactive ",
              "was developed under a series of grants from the [National Science Foundation](http://nsf.gov \"National Science Foundation\") ",
              "(DRL-0929774, DRL-1220756 ) in partnership with the ",
              "[National Geographic Society](http://nationalgeographic.org/education/ \"National Geographic Society\")."],
  "theme": [
    "has",
    "standalone-playback",
    "no-slider-bar",
    "graph-title-bg"
  ],
  "showTopBar": true,
  "showBottomBar": true,
  "padding": 10,
  "models": [
    {
      "type": "iframe-model",
      "id": "iframe-model",
      "url": "models/lab-version/1/iframe-model/iframe-model.json",
      "onLoad": [],
      "viewOptions": {
        "controlButtons": "play_reset"
      },
      "modelOptions": {
        "url": "//concord-consortium.github.io/space-models/light-intensity/",
        "planet.diameter": 1
      }
    }
  ],
  "outputs": [
    {
      "name": "time",
      "value": "return iframeOutput('time') * 365 || 0;"
    },
    {
      "name": "lightIntensity",
      "value": "return iframeOutput('lightIntensity') || 0;"
    }
  ],
  "filteredOutputs": [],
  "helpTips": [],
  "dataSets": [],
  "components": [
    {
      "id": "clear-graphs",
      "type": "button",
      "action": [
        "var newXMin = Math.round(get('time'));",
        "var newXMax = newXMin + 600;",
        "setComponentAttributes('light-intensity', {xmin: newXMin, xmax: newXMax});"
      ],
      "text": "Clear graph",
      "width": "",
      "height": "",
      "disabled": false,
      "tooltip": "",
      "helpIcon": false
    },
    {
      "id": "planet-diameter",
      "type": "slider",
      "min": 0.1,
      "max": 3,
      "steps": 50,
      "width": "100%",
      "title": "Planet diameter",
      "fillColor": "#459ACE",
      "labels": [
        {
          "value": 0.1,
          "label": "1x Earth"
        },
        {
          "value": 3,
          "label": "50x Earth"
        }
      ],
      "property": "planet.diameter"
    },
    {
      "id": "light-intensity",
      "type": "graph",
      "enableAxisScaling": false,
      "enableZooming": false,
      "properties": [
        "lightIntensity"
      ],
      "xProperty": "time",
      "title": "Light Intensity",
      "titlePosition": "left",
      "buttonsStyle": "text",
      "buttonsLayout": "horizontal",
      "lineWidth": 2,
      "xlabel": "Time (days)",
      "xmin": 0,
      "xmax": 600,
      "ylabel": "Light Intensity",
      "ymin": 0.8,
      "ymax": 1.1,
      "xTickCount": 8,
      "yTickCount": 4,
      "xFormatter": ".2r",
      "yFormatter": ".2s",
      "dataColors": [
        "#0000ff"
      ]
    },
    {
      "id": "playback",
      "type": "playback",
      "stepping": true
    }
  ],
  "layout": {
    "playback-container": [
      "playback"
    ],
    "bottom": [
      "planet-diameter"
    ],
    "right-top": [
      "light-intensity"
    ],
    "under-graphs": [
      "clear-graphs"
    ]
  },
  "template": [
    {
      "id": "playback-container",
      "top": "model.bottom",
      "left": "model.left",
      "padding-top": "1em"
    },
    {
      "id": "bottom",
      "left": "playback-container.right",
      "right": "model.right",
      "top": "model.bottom",
      "margin-top": "0.25em",
      "margin-left": "3em"
    },
    {
      "id": "right-top",
      "left": "model.right",
      "height": "model.height",
      "width": "20em",
      "padding-left": "0.3em",
      "padding-right": "0.3em"
    },
    {
      "id": "under-graphs",
      "left": "right-top.left",
      "right": "right-top.right",
      "top": "right-top.bottom",
      "align": "right",
      "margin-right": "1em",
      "margin-top": "1em"
    }
  ]
}
