{
  "title": "onClick Demo",
  "publicationStatus": "public",
  "subtitle": "Use onClick() to add a click listener to a specified type of objects.",
  "models": [
    {
      "type": "md2d",
      "id": "simple-gas$0",
      "url": "models-converted/lab-version/1/md2d/new-examples-for-nextgen/simple-gas$0.json",
      "viewOptions": {
        "controlButtons": "play_reset"
      }
    }
  ],
  "parameters": [
    {
      "name": "plotAction",
      "initialValue": "nothing",
      "onChange": [
        "switch(value) {",
        "  case 'nothing':",
        "    onClick('background', function () {}); break;",
        "  case 'atom':",
        "    onClick('background', function(x, y, d, i) {",
        "      addAtom({x: x, y: y});",
        "    }); break;",
        "  case 'obstacle':",
        "    onClick('background', function(x, y, d, i) {",
        "      addObstacle({x: x, y: y, width: 0.2, height: 0.2});",
        "    }); break;",
        "}"
      ]
    },
    {
      "name": "atomAction",
      "initialValue": "nothing",
      "onChange": [
        "switch(value) {",
        "  case 'nothing':",
        "    onClick('atom', function () {}); break;",
        "  case 'remove':",
        "    onClick('atom', function(x, y, d, i) {",
        "      removeAtom(i);",
        "    }); break;",
        "  case 'charge':",
        "    onClick('atom', function(x, y, d, i) {",
        "      setAtomProperties(i, {charge: Math.random() * 2 - 1});",
        "    }); break;",
        "}"
      ]
    },
    {
      "name": "obstacleAction",
      "initialValue": "nothing",
      "onChange": [
        "switch(value) {",
        "  case 'nothing':",
        "    onClick('obstacle', function () {}); break;",
        "  case 'remove':",
        "    onClick('obstacle', function(x, y, d, i) {",
        "      removeObstacle(i);",
        "    }); break",
        "}"
      ]
    }
  ],
  "components": [
    {
      "id": "plotLabel",
      "type": "text",
      "text": "Clicking a background does:",
      "width": "13em"
    },
    {
      "id": "plotAction",
      "type": "radio",
      "orientation": "horizontal",
      "property": "plotAction",
      "options": [
        {
          "text": "nothing",
          "value": "nothing"
        },
        {
          "text": "adds an atom",
          "value": "atom"
        },
        {
          "text": "adds an obstacle",
          "value": "obstacle"
        }
      ]
    },
    {
      "id": "atomLabel",
      "type": "text",
      "text": "Clicking an atom does:",
      "width": "13em"
    },
    {
      "id": "atomAction",
      "type": "radio",
      "orientation": "horizontal",
      "property": "atomAction",
      "options": [
        {
          "text": "nothing",
          "value": "nothing"
        },
        {
          "text": "removes it",
          "value": "remove"
        },
        {
          "text": "sets random charge",
          "value": "charge"
        }
      ]
    },
    {
      "id": "obstacleLabel",
      "type": "text",
      "text": "Clicking an obstacle does:",
      "width": "13em"
    },
    {
      "id": "obstacleAction",
      "type": "radio",
      "orientation": "horizontal",
      "property": "obstacleAction",
      "options": [
        {
          "text": "nothing",
          "value": "nothing"
        },
        {
          "text": "removes it",
          "value": "remove"
        }
      ]
    }
  ],
  "layout": {
    "bottom": [
      [
        "plotLabel",
        "plotAction"
      ],
      [
        "atomLabel",
        "atomAction"
      ],
      [
        "obstacleLabel",
        "obstacleAction"
      ]
    ]
  }
}